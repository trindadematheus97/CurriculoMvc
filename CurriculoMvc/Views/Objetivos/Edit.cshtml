@model CurriculoMvc.Models.Objetivo

@{
    ViewData["Title"] = "Atualizar objetivo";
}

<div class="formulario">

    <h4>Atualizar Objetivo</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ObjetivoId" />
                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Descrição" id="Descrição" class="validate" />
                        <label for="Descrição">Descrição</label>
                        <span asp-validation-for="Descrição" class="red-text darken-3"></span>
                    </div>
                </div>
                <input asp-for="CurriculoId" type="hidden" />
                <div class="row">
                    <input type="submit" value="Atualizar" class="btn btn-small green darken-1" /> &nbsp;
                    <a asp-action="Details" asp-controller="Curriculos" asp-route-id="@Model.CurriculoId">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>